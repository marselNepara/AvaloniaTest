<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTest.MainWindow"
        FontFamily="Comic Sans MS"
        Icon="/Assets/Mozaika.ico"
        Title="Avalonia Srez"
        Background="#FFFFFF">
    <Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="0" Orientation="Horizontal" >
            <Image Source="/Assets/Mozaika.png"
                   Width="50"
                   Height="50"
                   Margin="10"/>
			<Button Margin="0" Click="Materials_Click" Name="Materials" Content="Materials"/>
            <Button Click="Suppliers_Click" Name="Suppliers" Content="Suppliers"/>
            <Button Click="Calculation_Click" Name="Calculation" Content="Calculation"/>
        </StackPanel>
        <ContentControl Name="MainContent" Grid.Row="1"/>
    </Grid>
</Window>
