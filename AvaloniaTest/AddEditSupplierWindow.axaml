<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="AvaloniaTest.AddEditSupplierWindow"
        Title="Add / Edit Supplier"
        WindowState="Maximized">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" Spacing="8">
            <TextBlock Text="Добавление / редактирование поставщика"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <Label Content="Название:"/>
            <TextBox Name="nameSupplier" Watermark="Введите название поставщика"/>
            <TextBlock Name="errorName" Foreground="Red" FontSize="12"/>

            <Label Content="ИНН:"/>
            <TextBox Name="innSupplier" Watermark="10 или 12 цифр"/>
            <TextBlock Name="errorInn" Foreground="Red" FontSize="12"/>

            <Label Content="Рейтинг:"/>
            <TextBox Name="ratingSupplier" Watermark="Число от 1 до 10"/>
            <TextBlock Name="errorRating" Foreground="Red" FontSize="12"/>

            <Label Content="Дата начала сотрудничества:"/>
            <DatePicker Name="startDateSupplier"/>
            <TextBlock Name="errorDate" Foreground="Red" FontSize="12"/>

            <Label Content="Тип поставщика:"/>
            <ComboBox Name="typeSupplier" DisplayMemberBinding="{Binding Name}"/>
            <TextBlock Name="errorType" Foreground="Red" FontSize="12"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Spacing="10">
                <Button Name="btnClose" Content="Закрыть" Click="Close_Click"/>
                <Button Name="btnSave" Content="Сохранить" Click="Save_Click" Background="#0066cc" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
